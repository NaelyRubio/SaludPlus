<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#dcf2fb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo -->
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/logo_saludplus"
            android:layout_marginBottom="8dp"
            android:contentDescription="Logo" />

        <!-- Título -->
        <TextView
            android:text="Crear Cuenta"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1D1D1D"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Campo: Nombre -->
        <EditText
            android:id="@+id/nombreEditText"
            android:hint="Nombre(s)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_fondo"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Campo: Apellido -->
        <EditText
            android:id="@+id/apellidoEditText"
            android:hint="Apellido(s)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_fondo"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Fecha de nacimiento -->
        <EditText
            android:id="@+id/fechaNacimientoEditText"
            android:hint="Fecha de nacimiento"
            android:focusable="false"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_fondo"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:drawableEnd="@drawable/ic_arrow_drop_down" />

        <!-- Género -->
        <Spinner
            android:id="@+id/generoSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_fondo"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Contraseña -->
        <EditText
            android:id="@+id/passwordEditText"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_fondo"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Confirmar contraseña -->
        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:hint="Confirmar contraseña"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_fondo"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Texto Rol -->
        <TextView
            android:text="Rol de usuario"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Selector visual de rol -->
        <RadioGroup
            android:id="@+id/rolRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rol_selector_background"
            android:padding="4dp"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/pacienteRadio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/rol_selected_left"
                android:text="Paciente"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/medicoRadio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/rol_selected_right"
                android:text="Médico"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="12dp" />
        </RadioGroup>

        <!-- Botón registrar -->
        <Button
            android:id="@+id/registerButton"
            android:text="Registrarse"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo"
            android:layout_marginBottom="12dp" />

        <!-- Link para ir al login -->
        <TextView
            android:text="¿Ya tienes una cuenta?"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/loginLink"
            android:text="¡Iniciar sesión!"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</ScrollView>