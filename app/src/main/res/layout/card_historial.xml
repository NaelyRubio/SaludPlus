<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Imagen redonda del doctor -->
        <ImageView
            android:id="@+id/imgDoctor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/doc2"
            android:background="@drawable/disenoimagen"
            android:contentDescription="Foto del doctor" />

        <!-- Contenedor de textos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Hamza Tariq"
                android:textColor="#1C1C1C"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEspecialidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiología"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completada"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Botón flecha -->
        <ImageButton
            android:id="@+id/btnVerCita"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_boton_flecha"
            android:src="@drawable/bg_go"
            android:scaleType="centerInside"
            android:contentDescription="Ver cita"
            app:tint="@android:color/white" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
